<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaloyanov.ivan.yourleaf">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_leaf"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_leaf"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.kaloyanov.ivan.yourleaf.activities.init.InitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kaloyanov.ivan.yourleaf.activities.welcome.WelcomeActivity" />
        <activity android:name=".activities.home.HomeActivity" />
        <activity android:name="com.kaloyanov.ivan.yourleaf.activities.settings.SettingsActivity" />
        <activity
            android:name="com.kaloyanov.ivan.yourleaf.activities.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
    </application>

</manifest>